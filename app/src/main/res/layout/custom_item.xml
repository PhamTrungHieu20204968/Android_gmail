<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
	<TextView
			android:text="T"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:gravity="center"
			android:id="@+id/item_avatar"
			android:textSize="30sp"
			android:background="@drawable/avatar_background"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
	<TextView
			android:text="Title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/item_title"
			android:textSize="20sp"
			android:textColor="#000"
			android:drawableLeft="@drawable/baseline_label_important_24"
			app:layout_constraintStart_toEndOf="@+id/item_avatar" android:layout_marginStart="16dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>

	<TextView
			android:text="mail_title"
			android:layout_width="250dp"
			android:lines="1"
			android:layout_height="20dp" android:id="@+id/mail_title"
			app:layout_constraintStart_toEndOf="@+id/item_avatar"
			app:layout_constraintTop_toBottomOf="@+id/item_title" android:layout_marginStart="16dp"
			android:layout_marginTop="8dp" android:textSize="16sp"/>
	<TextView
			android:text="Description"
			android:lines="1"
			android:textSize="16sp"
			android:layout_width="250dp"
			android:layout_height="20dp"
			android:id="@+id/item_description"
			app:layout_constraintHorizontal_weight="1"
			app:layout_constraintVertical_weight="1"
			app:layout_constraintTop_toBottomOf="@+id/mail_title"
			app:layout_constraintStart_toEndOf="@+id/item_avatar" android:layout_marginStart="16dp"
			android:layout_marginTop="5dp"/>
	<TextView
			android:text="Time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/item_time"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="16dp"
			android:textSize="16sp"/>
	<CheckBox
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/item_checkbox"
			android:layout_marginEnd="16dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="16dp"
			android:button="@android:drawable/btn_star_big_off"/>

</android.support.constraint.ConstraintLayout>